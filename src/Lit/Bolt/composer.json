{
  "name": "litphp/bolt",
  "description": "litphp micro-framework",
  "license": "ISC",
  "authors": [
    {
      "name": "McFog Wang",
      "email": "mcfogw@gmail.com"
    }
  ],
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Lit\\Bolt\\": ""
    },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },
  "require": {
    "litphp/lit": "^0.9@dev",
    "litphp/air": "^0.9@dev",
    "symfony/event-dispatcher": "^4.0"
  },
  "require-dev": {
    "http-interop/http-factory-diactoros": "^1.0",
    "litphp/nexus": "^0.9@dev",
    "litphp/router-fast-route": "^0.9@dev",
    "litphp/runner-zend-sapi": "^0.9@dev",
    "phpunit/phpunit": "^6.5",
    "zendframework/zend-diactoros": "^1.8",
    "zendframework/zend-httphandlerrunner": "^1.0"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.9.x-dev"
    }
  },
  "suggest": {
    "litphp/router-fast-route": "suggested fast-route adapter and used by example"
  }
}
