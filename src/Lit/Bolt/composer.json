{
  "name": "litphp/bolt",
  "description": "litphp micro-framework",
  "license": "ISC",
  "authors": [
    {
      "name": "McFog Wang",
      "email": "mcfogw@gmail.com"
    }
  ],
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Lit\\Bolt\\": ""
    },
    "exclude-from-classmap": [
      "/Tests/"
    ],
    "files": [
      "./constants.php"
    ]
  },
  "require": {
    "litphp/lit": "^0.8@dev",
    "litphp/nexus": "^0.8@dev",
    "litphp/nimo": "^0.8@dev",
    "litphp/air": "^0.1.6",
    "symfony/event-dispatcher": "^4.0",
    "zendframework/zend-diactoros": "^1.6"
  },
  "require-dev": {
    "litphp/router-fast-route": "^0.1@dev"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.3.x-dev"
    }
  },
  "suggest": {
    "litphp/router-fast-route": "suggested fast-route adapter and used by example"
  }
}
